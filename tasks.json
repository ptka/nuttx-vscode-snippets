    "version": "2.0.0",
    "tasks": [
        {
            "label": "build NuttX project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/nuttx"
            },
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean NuttX project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/nuttx"
            },
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
